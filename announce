#!/usr/bin/env python3
import colors as c
import os
# This simply allows you to put in a message, and it will send it to
# an "announcement.txt" file in everyone's bin.



print(c.g + 'Enter your message')
message = input(c.cyan)

os.system('echo "#!/usr/bin/env python3\n')
os.syetm('\n')
os.system('echo print(' + str(message) + ' >> ~/announcement')
